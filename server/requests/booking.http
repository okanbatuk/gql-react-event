### GET ALL BOOKINGS
###
POST http://localhost:4000/graphql HTTP/1.1
X-Request-Type: GraphQL
Content-Type: application/json
Authorization: Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJlbWFpbCI6ImRhcm1pYW5AZXhhbXBsZS5jb20iLCJpYXQiOjE2OTA4MjcyNzQsImV4cCI6MTY5MDgyNzg3NH0.lFuNeVbXlavvHIBx3XHkqg9ML18NV_YuUxedMp5FqG4

query {
  bookings {
    _id
    createdAt
    updatedAt
    event {
      title
      description
      price
      date
    }
    user {
      email
      createdAt
      updatedAt
    }
  }
}

### BOOK THE EVENT
###
POST http://localhost:4000/graphql HTTP/1.1
Content-Type: application/json
X-REQUEST-TYPE: GraphQL
Authorization: Bearer eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJlbWFpbCI6ImRhcm1pYW5AZXhhbXBsZS5jb20iLCJpYXQiOjE2OTA4MjcyNzQsImV4cCI6MTY5MDgyNzg3NH0.lFuNeVbXlavvHIBx3XHkqg9ML18NV_YuUxedMp5FqG4

mutation ($event: ID!, $user: ID!) {
  bookEvent(event: $event, user: $user) {
    _id
    createdAt
    updatedAt
  }
}

